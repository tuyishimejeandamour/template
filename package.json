{
  "name": "TPM",
  "version": "0.0.1",
  "description": "this is template package manager for manging darg and editing of some components",
  "author": "tuyishime jeandamour",
  "repository": "https://github.com/logicdiscovered/tpm",
  "license": "MIT",
  "main": "./lib/index.js",
  "bin": {
    "template": "bin/template"
  },
  "keywords": [
    "cli",
    "tpm",
    "community",
    "typescript",
    "javascript",
    "nodejs",
    "com",
    "generator",
    "template",
    "framework"
  ],
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "nyc mocha",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": " npm i -g & template",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "dependencies": {
    "commander": "^6.2.1",
    "figlet": "^1.5.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^8.0.0",
    "kleur": "^4.1.4",
    "lodash": "^4.17.21",
    "parse-semver": "^1.1.1",
    "semver": "^6.3.0",
    "tslib": "^2.2.0",
    "yauzl": "^2.10.0",
    "cheerio": "^1.0.0-rc.9",
		"denodeify": "^1.2.1",
		"glob": "^7.0.6",
		"leven": "^3.1.0",
		"markdown-it": "^10.0.0",
		"mime": "^1.3.4",
		"minimatch": "^3.0.3",
		"osenv": "^0.1.3",
		"read": "^1.0.7",
		"tmp": "^0.2.1",
		"typed-rest-client": "^1.8.4",
		"url-join": "^1.1.0",

		"yazl": "^2.2.2"
  },
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
    "@types/chai": "^4.2.16",
    "@types/figlet": "^1.5.0",
    "@types/fs-extra": "^9.0.10",
    "@types/inquirer": "^7.3.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/sinon": "^9.0.11",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "mocha-junit-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.6.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4",
    "@types/cheerio": "^0.22.29",
		"@types/denodeify": "^1.2.31",
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.123",
		"@types/markdown-it": "0.0.2",
		"@types/mime": "^1",
		"@types/minimatch": "^3.0.3",
		"@types/read": "^0.0.28",
		"@types/semver": "^6.0.0",
		"@types/tmp": "^0.1.0",
		"@types/xml2js": "^0.4.4",
		"concurrently": "^5.1.0",
		"husky": "^4.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "2.1.2",
		"pretty-quick": "^3.0.2",
		"source-map-support": "^0.4.2",

		"xml2js": "^0.4.12"
  }
}
